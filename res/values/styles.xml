<resources>
    <style name="AppBaseTheme" parent="Base.Theme.AppCompat.Light">
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    </style>

    <style name="datepicker1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">0</item>
        <item name="android:spinnersShown">true</item>
        <item name="android:layout_span">2</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="btntext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/button_text</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>
